<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#002D57"
                android:endColor="#001725"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- Neon light shapes -->
    <item>
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#72FF03"
                    android:centerColor="#FFD703"
                    android:endColor="#72FF03"
                    android:type="linear"
                    android:angle="0" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#FFD703"
                    android:centerColor="#72FF03"
                    android:endColor="#FFD703"
                    android:type="linear"
                    android:angle="0" />
            </shape>
        </rotate>
    </item>

    <!-- Dark overlay -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#50000000" />
        </shape>
    </item>

</layer-list>
